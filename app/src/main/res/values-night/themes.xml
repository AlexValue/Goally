<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyGoallyApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/premierColor_dark</item>
        <item name="colorPrimaryVariant">@color/item_fill_dark</item>
        <item name="colorOnPrimary">@color/item_background_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/textColor_main_dark</item>
        <item name="colorSecondaryVariant">@color/textColor_second_dark</item>
        <item name="colorSecondaryContainer">@color/textColor_main_dark</item>
        <item name="colorOnSecondary">@color/background_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_dark</item> <!-- Цвет верхней строки -->
        <item name="android:windowLightStatusBar">false</item> <!-- Текст на верхней строке будет тёмным -->
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/background_dark</item> <!-- Цвет панели навигации -->
        <item name="android:windowLightNavigationBar">false</item> <!-- Цвет иконок на панели навигации будет тёмным -->

        <item name="android:windowBackground">@color/background_dark</item>

        <item name="colorOnPrimaryContainer">@color/progress_dark</item>
    </style>
</resources>