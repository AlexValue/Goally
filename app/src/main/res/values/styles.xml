<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NoShadowButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/delete_button_background</item>
    </style>

    <style name="BottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <item name="colorSecondaryContainer">?attr/colorTertiaryContainer</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:fontFamily">@font/calibri</item>
    </style>

    <style name="BottomNavLabelStyle">
        <item name="android:textSize">17dp</item>
    </style>

    <style name="CustomProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_progress_bar</item>
    </style>

    <style name="TasksProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/tasks_progress_bar</item>
    </style>

</resources>