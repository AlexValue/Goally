<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyGoallyApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/premierColor</item>
        <item name="colorPrimaryVariant">@color/item_fill_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/textColor_main_light</item>
        <item name="colorSecondaryVariant">@color/textColor_second_light</item>
        <item name="colorSecondaryContainer">@color/black</item>
        <item name="colorOnSecondary">@color/background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background</item> <!-- Цвет верхней строки -->
        <item name="android:windowLightStatusBar">true</item> <!-- Текст на верхней строке будет тёмным -->
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/background</item> <!-- Цвет панели навигации -->
        <item name="android:windowLightNavigationBar">true</item> <!-- Цвет иконок на панели навигации будет тёмным -->

        <item name="android:windowBackground">@color/background</item>

        <item name="colorOnPrimaryContainer">@color/progress_light</item>
        <item name="colorPrimaryContainer">@color/cancelButtonLight</item>
        <item name="colorTertiaryContainer">@color/bottomNavBackground</item>
        <item name="colorOnTertiaryContainer">@color/selectedIcon</item>
        <item name="itemTextColor">@color/selectedIconText</item>
        <item name="colorTertiary">@color/progressBarBackground</item>

        <item name="android:textAllCaps">false</item>
    </style>
</resources>
